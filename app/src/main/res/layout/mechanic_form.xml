<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mechanic_form">

    <TextView
        android:id="@+id/registration"
        android:layout_width="329dp"
        android:layout_height="69dp"
        android:fontFamily="sans-serif-black"
        android:text="Registration"
        android:textAlignment="center"
        android:textColor="#6B157A"
        android:textSize="48sp"
        tools:ignore="HardcodedText,MissingConstraints"
        tools:layout_editor_absoluteX="31dp"
        tools:layout_editor_absoluteY="16dp" />


    <EditText
        android:id="@+id/FirstName"
        android:layout_width="358dp"
        android:layout_height="61dp"
        android:background="#D8BFD8"
        android:hint="First Name"
        android:padding="20dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="112dp"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/LastName"
        android:layout_width="358dp"
        android:layout_height="61dp"
        android:background="#D8BFD8"
        android:hint="Last Name"
        android:padding="20dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="181dp"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/Email"
        android:layout_width="358dp"
        android:layout_height="61dp"
        android:background="#D8BFD8"
        android:hint="Email ID"
        android:padding="20dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="251dp"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/Phone"
        android:layout_width="358dp"
        android:layout_height="61dp"
        android:background="#D8BFD8"
        android:hint="Phone number"
        android:padding="20dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="320dp"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/Address"
        android:layout_width="358dp"
        android:layout_height="61dp"
        android:background="#D8BFD8"
        android:hint="Address"
        android:padding="20dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="396dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/Services"
        android:layout_width="132dp"
        android:layout_height="35dp"
        android:background="#D8BFD8"
        android:text="Services Offered"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="475dp"
        tools:ignore="MissingConstraints" />

    <CheckBox
        android:id="@+id/checkBox12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tyre Services"
        tools:layout_editor_absoluteX="20dp"
        tools:layout_editor_absoluteY="508dp"
        tools:ignore="MissingConstraints" />

    <CheckBox
        android:id="@+id/checkBox13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Engine Services"
        tools:layout_editor_absoluteX="20dp"
        tools:layout_editor_absoluteY="534dp"
        tools:ignore="MissingConstraints" />

    <CheckBox
        android:id="@+id/checkBox14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Oil Leakage"
        tools:layout_editor_absoluteX="20dp"
        tools:layout_editor_absoluteY="564dp"
        tools:ignore="MissingConstraints" />

    <CheckBox
        android:id="@+id/checkBox15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Car Towing"
        tools:layout_editor_absoluteX="214dp"
        tools:layout_editor_absoluteY="508dp"
        tools:ignore="MissingConstraints" />

    <CheckBox
        android:id="@+id/checkBox16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Manual Repairing"
        tools:layout_editor_absoluteX="214dp"
        tools:layout_editor_absoluteY="534dp"
        tools:ignore="MissingConstraints" />

    <CheckBox
        android:id="@+id/checkBox17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Other"
        tools:layout_editor_absoluteX="214dp"
        tools:layout_editor_absoluteY="564dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/neext"
        android:layout_width="129dp"
        android:layout_height="63dp"
        android:text="Next"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="642dp"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>